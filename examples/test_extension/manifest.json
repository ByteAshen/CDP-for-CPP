{
  "manifest_version": 3,
  "name": "CDP Test Extension",
  "version": "1.0.0",
  "description": "Test extension for CDP for C++ - injects a visible banner to prove extension is loaded",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
