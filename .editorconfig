# EditorConfig for CDP for C++
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C++ source files
[*.{cpp,hpp,h,c,cc,cxx,hxx}]
indent_size = 4

# CMake files
[CMakeLists.txt]
indent_size = 4

[*.cmake]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# Git configuration
[.git*]
indent_size = 4
